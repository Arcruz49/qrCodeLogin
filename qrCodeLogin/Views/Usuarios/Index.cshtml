<table id="usuariosTable" class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Data Criação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


<style>
    td{
        text-align:center;
    }

    th{
        text-align: center;
    }

    #usuariosTable {
        margin-top: 100px;
    }
</style>

<script>
    var dataTable;
    $(document).ready(function () {
        dataTable = $('#usuariosTable').DataTable({
            "ajax": {
                "url": "/Usuarios/getUsuarios",
                "type": "GET",
                "dataSrc": "data",
                "data": function (d) {
                    d.search = $('#layoutSearch').val(); 
                }
            },
            "columns": [
                { "data": "cdUsuario" },
                { "data": "nmUsuario" },
                { "data": "email" },
                { "data": "dtCriacao" },
                {
                    "data": null,
                    "render": function (data) {
                        return `
                                <button class="btn btn-primary" onclick="editUser(${data.cdUsuario})">
                                    <i class="fa-regular fa-pen-to-square" style="color: white;"></i>
                                </button>
                                <button class="btn btn-danger" onclick="deleteUser(${data.cdUsuario})">
                                    <i class="fa-solid fa-trash-can" style="color: #ffff;"></i>
                                </button>`;
                    }
                }
            ],
            "searching": false,  
            "processing": true,  
            "serverSide": false  
        });

        $('#searchBtn').click(function () {
            dataTable.ajax.reload(null, false); 
        });
    });


    function deleteUser(cdUsuario) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Usuarios/DeletarUsuario',
                    type: 'POST',
                    data: {
                        cdUsuario: cdUsuario
                    },
                    success: function (data) {
                        if (data.success) {
                            Swal.fire({
                                title: "Deleted!",
                                text: "Account deleted.",
                                icon: "success"
                            });
                            dataTable.ajax.reload(null, false); 
                        } else {
                            Swal.fire({
                                title: "Error!",
                                text: data.message,
                                icon: "error"
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: "Error!",
                            text: error,
                            icon: "error"
                        });
                    }
                });
            }
        });
    }
</script>
